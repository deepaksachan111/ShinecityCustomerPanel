<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shinecity.lko.customerpanal.EMIPaymentActivity">


    <LinearLayout
        android:id="@+id/linear_actionbar"
        android:background="@color/lite_dark_blue"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back_emipayments"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@mipmap/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:typeface ="monospace"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:text="Customer Panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:textColor="@color/lite_dark_blue"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="EMI Payments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#435966"
        android:layout_width="fill_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/lite_dark_blue"
            android:text="Sites"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spiner_emipayments_site"
            android:layout_marginTop="5dp"
            android:background="@drawable/sppiner_bg"
            android:layout_width="fill_parent"
            android:layout_height="35dp">


        </Spinner>

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/lite_dark_blue"
            android:text="Plot No."
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <EditText
            android:singleLine="true"
            android:clickable="true"
            android:padding="5dp"
            android:id="@+id/edt__emipayments_plotno"
            android:layout_marginTop="5dp"
            android:background="@drawable/sppiner_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


        </EditText>

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/lite_dark_blue"
            android:text="Booking ID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:singleLine="true"
            android:padding="5dp"
            android:id="@+id/edt__emipayments_bookingid"
            android:layout_marginTop="5dp"
            android:background="@drawable/sppiner_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


        </EditText>

        <Button
            android:id="@+id/btn__emipayments_show"
            android:textColor="@color/white"
            android:background="@drawable/button_shadow_bg"
            android:layout_marginTop="30dp"
            android:text="Display"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
