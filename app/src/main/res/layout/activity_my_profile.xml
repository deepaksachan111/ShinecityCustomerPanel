<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"

            android:src="#004F81" />
        <ImageView
            android:id="@+id/iv_profile_back"
            android:padding="10dp"
            android:src="@mipmap/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
           android:layout_marginLeft="20dp"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_user" />

        <TextView

            android:fontFamily="sans-serif-condensed"
            android:id="@+id/user_profile_name"
            android:layout_marginLeft="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="30dp"
            android:textColor="#fff"
            android:textSize="24sp" />



        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/sky_blue"
            android:elevation="4dp"
            android:paddingBottom="24dp">

            <TextView
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-condensed-light"
                android:id="@+id/user_profile_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Date of Birth"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:padding="10dp"
               android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-light"
                android:id="@+id/user_profile_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="#fff"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/user_profile_short_bio"
                android:layout_alignStart="@+id/user_profile_short_bio" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_below="@+id/profile_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="#004F81"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="7dp"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:text="Personal Details"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:text="Father's Name"
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_fathername"
                    android:text="Shinecity Group"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Marital Status"
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_maritalstatus"
                    android:text="Married"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Husband/Wife Name "
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_husbandname"
                    android:text="RAMSURAT YADAV"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Contact No "
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_contactname"
                    android:text="99*****7250"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Email"
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_email"
                    android:text="Shinecitygruop@gmail.com"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Address"
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_address"
                    android:text="43 SUSRAON KHORI DEORIA"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:background="#004F81"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="7dp"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:text="Nommine Details"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:text="Nominee Name"
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_nomineename"
                    android:text="RAJKUMARI DEVI"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Relation with Policy Holder "
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_nomineerelation"
                    android:text="Wife"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Nominee DOB "
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_nomineedob"
                    android:text="Nominee DOB"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Nominee Annual Income "
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_nomineeanualincome"
                    android:text="income"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Nominee Occupation "
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_nomineeocupassion"
                    android:text="Occupation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Appointee"
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_nominee_appointee"
                    android:text="appoint"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:background="#004F81"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="7dp"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:text="Bank Details"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Bank Account"
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_acno"
                    android:text="Unavailable"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Bank Name"
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_bankname"
                    android:text="Unavailable"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Branch Name"
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_branchname"
                    android:text="Unavailable"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Account Type"
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_accounttype"
                    android:text="Unavailable"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="MICR No"
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_micr"
                    android:text="Unavailable"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="IFSC Code "
                    android:textColor="@color/lite_dark_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/user_profile_ifsc"
                    android:text="Unavailable"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

