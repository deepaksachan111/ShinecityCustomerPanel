    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="#993300"
            android:text="Enquiry Date"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/view_enquiry_enquirydate"
            android:padding="5dp"
            android:layout_weight="2"
            android:textSize="16dp"
            android:textColor="#208BBD"
            android:text="Enquiry Date"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView

            android:padding="5dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="#993300"
            android:text="Query Status"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/view_enquiry_qstatus"
            android:padding="5dp"
            android:layout_weight="2"
