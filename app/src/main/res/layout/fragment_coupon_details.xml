<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shinecity.lko.customerpanal.CouponDetailsFragment">

    <LinearLayout
        android:id="@+id/linear_actionbar"
        android:background="@color/lite_dark_blue"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp">

    <ImageView
        android:id="@+id/coupon_detail_back"
        android:padding="10dp"
        android:layout_gravity="center"
        android:src="@mipmap/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

        android:typeface ="monospace"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:text="Customer Panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:textColor="@color/lite_dark_blue"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Coupon Details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#435966"
        android:layout_width="fill_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/lite_dark_blue"
            android:text="Coupon No."
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:editable="false"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@drawable/sppiner_bg"
            android:layout_width="fill_parent"
            android:layout_height="35dp">


        </EditText>

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/lite_dark_blue"
            android:text="Plot No."
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:editable="false"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@drawable/sppiner_bg"
            android:layout_width="fill_parent"
            android:layout_height="35dp">


        </EditText>

        <Button
            android:textColor="@color/white"
            android:background="@drawable/button_bg"
            android:layout_marginTop="30dp"
            android:text="Get Detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        </LinearLayout>

</LinearLayout>
